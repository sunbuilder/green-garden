.board{
  display:flex;
  -webkit-flex-direction:column;
  -moz-flex-direction:column;
  -ms-flex-direction:column;
  -o--flex-direction:column; 
  flex-direction: column;

}
.board-item{
  display:flex;
  flex:1;
  cursor:pointer;
  border:10rpx solid #fff ;
  padding:40rpx;
  background-color:#fff;
}
.board-item text{
  flex:1;
  width: 40rpx;
  height: 40rpx;
}
.board-item image{
  width: 40rpx;
  height: 40rpx;
}
