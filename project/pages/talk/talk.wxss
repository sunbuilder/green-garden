.board{
  display:flex;
  -webkit-flex-direction:column;
  -moz-flex-direction:column;
  -ms-flex-direction:column;
  -o--flex-direction:column; 
  flex-direction: column;

}
.board-item{
  display:flex;
  flex:1;
 
  border:10rpx solid #fff;
  padding:40rpx;
  background-color:#fff;
}
.board-item text{
  flex:1;
  width: 100rpx;
  height: 100rpx;
}
.board-item image{
  width: 100rpx;
  height: 100rpx;
}
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 15rpx;
 
}
.con{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

